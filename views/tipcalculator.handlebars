 <div class="container text-light mt-5">
       <div class="row justify-content-md-center">
           <div class="col-md-5 bg-dark p-3"> 
               <h1 class="text-center">Tip Calculator</h1>
               <form id="form">
                   <div class="form-group">
                        <label for="totalCost">Total cost of meal:</label>
                        <input type="text" class="fomr-control" id="totalCost" placeholder="Total">
                   </div>
                   <div class="form-group">
                       <label for="service">Service quality</label>
                       <select class="form-control" id="service">
                           <option value="0.25">25% - Fantastic Service</option>
                           <option value="0.15">15% - Good Service</option>
                           <option value="0.05">5% - Terrible - not coming back</option>
                       </select>
                   </div>
                   <div class="form-group">
                       <label for="people">Number of people</label>
                       <input type="text" class="form-control" id="people" placeholder="People">
                   </div>
                   <button type="button" value="Submit" id="tipCalc" class="btn btn-primary">Submit</button>
               </form>
           </div>
       </div>

  
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <p>The tip today is: </p><span>$</span>
          <span id="totalTip"></span><small>each</small>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>
   </div>